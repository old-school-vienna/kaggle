docker run \
    --rm \
    --name sp \
    -e DATADIR=/opt/data \
    -v /home/wwa/prj/kaggle/m5fa/deep:/opt/project \
    -v /data/spark/data:/opt/data \
    -p 4040:80 \
    mytf /opt/spark/bin/spark-submit --executor-memory 40G \
        --driver-memory 40g --driver-java-options -Duser.timezone=CET \
        /opt/project/$1 
